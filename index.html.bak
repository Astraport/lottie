<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Lottie Test</title>
  <style>
    body {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background: #222;
    }
    #lottie {
      width: 400px;
      height: 400px;
      background: white;
    }
  </style>
</head>
<body>
  <div id="lottie"></div>

  <!-- lottie-web -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bodymovin/5.10.2/lottie.min.js"></script>

  <script>
    lottie.loadAnimation({
      container: document.getElementById("lottie"),
      renderer: "svg",
      loop: true,
      autoplay: true,
      path: "output.json"   // должен лежать рядом с index.html
    });
  </script>
</body>
</html>
